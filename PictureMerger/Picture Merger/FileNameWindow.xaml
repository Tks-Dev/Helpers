<Window x:Class="Picture_Merger.FileNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Picture_Merger"
        mc:Ignorable="d"
        Title="FileNameWindow" Height="85" Width="370" Background="Black" ResizeMode="NoResize">
    <Grid>
        <TextBox VerticalAlignment="Top" Height="26" Name="TextBox" Margin="110,0,0,0"/>
        <Button Content="Folder" Name="FolderBtn" Width="110" VerticalAlignment="Top" Height="26" HorizontalAlignment="Left" Click="FolderBtn_OnClick"/>
        <Button Name="Ok" Content="Save" VerticalAlignment="Bottom" Height="26" Click="Ok_OnClick" />
    </Grid>
</Window>
