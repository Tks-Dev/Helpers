<Window x:Class="CloneKiller.SelectReportFolder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CloneKiller"
        mc:Ignorable="d"
        Title="Select Report Folder" Height="160" Width="300" Background="#F87F7F" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow" Icon="Images/icon.png">
    <Grid>
        <Label Content="Select report folder" VerticalAlignment="Top" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Height="50" Padding="20,0" Foreground="#F87F7F" Background="#941010" FontSize="20"/>
        <Label Content="Path :" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,60,0,0"/>
        <TextBox Name="TboxPath" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="50,60,50,0" Height="26" IsEnabled="False"/>
        <Button Content="..." Name="BtnBrowse"  VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,60,10,0" Width="30" Height="26" Click="BtnBrowse_OnClick" />
        <Button Name="BtnOk" Content="OK" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="50" Margin="0,10" Click="BtnOk_OnClick" />
    </Grid>
</Window>
